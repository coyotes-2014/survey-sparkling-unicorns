<div class="hero-unit">
  <h1><%= @survey.name %></h1>
<form name = "survey" action = "/user/<%=@user.id%>/survey/<%=@survey.id%>/save" method = "POST">

    <% @survey.questions.each_with_index do |question, i| %>
      <%= question.content %>
      <ul>
      <% question.answers.each do |answer| %>
        <li><input type="radio" name= <%= i %> value= <%= answer.id %>><%= answer.content %><br>
        </li>
      <% end %>
    </ul>
    <hr>
    <% end %>
    <input type = "submit" value = "Submit">

</form>

</div>
